# /etc/systemd/system/cronosd.service
[Unit]
Description=cronosd
ConditionPathExists=<GORC_BINARY>
After=network.target

[Service]
Type=simple
User=<GORC_USER>
WorkingDirectory=<GORC_BINARY_DIR>
ExecStart=<GORC_BINARY> -c gorc.toml <GORC_START_COMMAND>
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target